{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/utilities/images/**/*",
        "outDir": "dist/utilities/images"
      },
      {
        "include": "src/utilities/fonts/**/*",
        "outDir": "dist/utilities/fonts"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
